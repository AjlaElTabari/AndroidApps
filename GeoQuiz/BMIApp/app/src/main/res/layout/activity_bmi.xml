<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BMIActivity">

    <TextView
        android:text="Input your height in cm:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="98dp"
        android:id="@+id/text_height"
        android:layout_above="@+id/text_weight"
        android:layout_alignLeft="@+id/text_weight"
        android:layout_alignStart="@+id/text_weight"/>

    <EditText
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="21dp"
        android:layout_alignTop="@+id/text_height"
        />
    <TextView
        android:text="Input your weight in kg:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_weight"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/height"
        android:layout_alignStart="@+id/height"/>

    <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_below="@+id/text_weight"
       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:onClick="getBmi"/>

</RelativeLayout>
